{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",  // Ensure this is set to 'node'
    "resolveJsonModule": true,   // Enables importing JSON files
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "lib": ["es6", "dom"]        // Include appropriate libraries
  }
}